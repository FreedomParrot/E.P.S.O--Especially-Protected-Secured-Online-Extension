{
  "manifest_version": 2,
  "name": "E.P.S.O - Especially Protected Secured Online",
  "version": "1.0.0",
  "description": "Stay anonymous online and maintain your privacy. Protect yourself from data harvesting and surveillance.",
  
  "icons": {
    "48": "icons/shield-48.png",
    "96": "icons/shield-96.png"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "privacy",
    "cookies",
    "storage",
    "tabs",
    "<all_urls>",
    "webNavigation"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/shield-48.png",
    "default_title": "E.P.S.O Privacy Protection",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    "injected.js"
  ]
}